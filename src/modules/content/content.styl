.container
  width: round((100 / $cols-number * 6)%, 3)
  padding-left: $gutter-half
  padding-right: $gutter-half
  margin-left: round((100 / $cols-number * 3)%, 3)

  @media (max-width: $breakpoint-md - 1)
    width: round((100 / $cols-number * 8)%, 3)
    margin-left: round((100 / $cols-number * 4)%, 3)

  @media (max-width: $breakpoint-sm - 1)
    width: 100%
    margin: 0
    padding: 0

.content
  background: $grey


.title
  font-size: 1.5em
  margin: 0
  padding: 0

.text
  padding: 1em 2em 0

  @media (max-width: $breakpoint-sm - 1)
    padding: 1em

  p
    padding: 0 0 1em
    margin: 0
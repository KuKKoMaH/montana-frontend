.container
  margin: 0
  padding: .5em .5em 0

.item
  list-style: none
  padding-bottom: 1em

  a
    padding: .2em .5em
    color: inherit
    text-decoration: none
    display: block
    border-radius: 4px
    transition: all .1s ease-out
    &:hover
      background: $grey-dark

    &:global(.current-menu-item)
      background: $grey-dark

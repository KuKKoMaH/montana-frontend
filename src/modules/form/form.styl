.block
  display: block
  margin-bottom: 1em

.wrapper
  text-align: right

.input
  display: block
  width: 100%
  font-size: 10px
  height: 16px
  padding: 0 .5em
  margin: 0
  border: 1px solid $black

.area
  max-width: 100%
  min-width: 100%
  height: 100px

.submit
  border: 0
  background: #6F6F6F
  color: $white
  font-size: 12px
  border-radius: 4px
  height: 22px

:global
  .screen-reader-response
    display: none

  .wpcf7-form-control-wrap
    margin-bottom: .5em
    display: block

  .wpcf7-not-valid-tip
    font-size: 14px
    color: red

  .wpcf7-response-output
    font-size: 15px
    margin-top: 8px
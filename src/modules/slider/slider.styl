@import "slick-carousel/slick/slick.css"
//@import "slick-carousel/slick/slick-theme.css"

.wrapper
  padding-bottom: 1em

.block
  position: relative
  background: $grey-dark
  padding: 8px 4px
  border-radius: 4px

.slide
  display: block
  margin: 0 4px

.image
  display: block
  margin: 0 auto
  height: auto

:global
  .slick-arrow
    position: absolute
    top: 50%
    margin-top: -10px
    background-color: transparent
    border: 0
    font-size: 0
    transition: all .1s ease-out
    cursor: pointer

    &:hover
      opacity: .7

    @media (max-width: $breakpoint-sm - 1)
      display: none

  .slick-prev
    right: 100%
    margin-right: 4px
    background: url(modules/slider/sprite-arrow-left.svg)

  .slick-next
    left: 100%
    margin-left: 4px
    background: url(modules/slider/sprite-arrow-right.svg)

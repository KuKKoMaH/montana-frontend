mixin slider()
  .slider-wrapper
    .slider-block
      each i in [1,2,3,4]
        a.slider-slide(href='https://source.unsplash.com/random/100x100?' + i data-width=100 data-height=100)
          img.slider-image(data-lazy='https://source.unsplash.com/random/230x175?' + i width=230 height=175)
        a.slider-slide(href='https://source.unsplash.com/random/1000x1000?' + i data-width=1000 data-height=1000)
          img.slider-image(data-lazy='https://source.unsplash.com/random/230x175?' + i width=230 height=175)

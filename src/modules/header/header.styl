.wrapper
  margin: $gutter 0

.logo
  width: 13%
  vertical-align: middle

  @media (max-width: $breakpoint-lg - 1)
    width: 10%

  @media (max-width: $breakpoint-sm - 1)
    width: inherit
    height: 90px

  img
    max-height: 90px
    display: block
    margin: 0 auto

.name
  text-align: center
  vertical-align: middle
  width: 25%

  @media (max-width: $breakpoint-md - 1)
    width: 33%

  @media (max-width: $breakpoint-sm - 1)
    width: inherit

.title
  font-size: 3em
  line-height: 1
  font-weight: bold
  text-align: center
  letter-spacing: 1px

.subtitle
  font-size: .75em
  font-weight: bold
  text-align: center

  @media (max-width: $breakpoint-lg - 1)
    font-size: .65em

.content
  width: 39%
  vertical-align: bottom

  @media (max-width: $breakpoint-lg - 1)
    width: 42%

  @media (max-width: $breakpoint-md - 1)
    width: 57%

  @media (max-width: $breakpoint-sm - 1)
    width: inherit

.contacts
  text-align: justify
  line-height: 0

  &:after
    content: ''
    display: inline-block
    width: 100%

  > *
    display: inline-block
    vertical-align: middle
    font-weight: bold
    line-height: 1

    @media (max-width: $breakpoint-sm - 1)
      display: block
      text-align: right
      margin-top: $gutter

    &:after
      content: ''
      display: inline-block
      vertical-align: middle
      margin-left: 8px

.contact
  display: inline-block
  vertical-align: middle

.phone
  &:after
    background: url(modules/header/sprite-phone.svg)

.email
  &:after
    background: url(modules/header/sprite-mail.svg)

.buttons
  margin-top: .5em
  line-height: 0
  text-decoration: none
  display: table
  table-layout: fixed
  width: 100%

  ul
    margin: 0
    padding: 0
    display: table-row
    table-layout: fixed
    width: 100%

  li
    text-decoration: none
    display: table-cell
    vertical-align: top

    &:first-child .button
      border-left: 1px solid $grey-dark


.button
  display: block
  background: $grey
  line-height: 35px
  height: 35px
  text-align: center
  color: inherit
  text-decoration: none
  transition: all .1s ease-out
  position: relative
  z-index: 1
  border: 1px solid $grey-dark
  border-left: 0

  &:hover, &:global(.current-menu-item)
    background: $grey-dark

.wtf
  width: 23%
  vertical-align: middle

  @media (max-width: $breakpoint-md - 1)
    display: none

  &-text
    text-align: center
    font-size: 2em
    font-weight: bold

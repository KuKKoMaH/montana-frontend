.content
  @media (max-width: $breakpoint-md - 1)
    float: left
    width: round((100 / $cols-number * 4)%, 3)

  @media (max-width: $breakpoint-sm - 1)
    display: none
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: $white
    font-variant: normal
    overflow: auto
    z-index: 100

.active
  @media (max-width: $breakpoint-sm - 1)
    display: block

.button
  display: none
  position: fixed
  top: 11px
  border: 0
  background-color: transparent
  padding: 0
  margin: 0
  z-index: 2

  @media (max-width: $breakpoint-sm - 1)
    display: block

.open
  background-image: url(modules/sidebars/sprite-menu.svg)
  left: $gutter-half

.close
  background-image: url(modules/sidebars/sprite-close.svg)
  right: $gutter-half
